pipeline {
    agent any

    parameters {
        string(name: 'env', defaultValue: 'test', description: 'Environment to compile')
    }

    stages {
        stage('Compile') {
            steps {
                script {
                    echo "Compiling Hello World"
                    echo "Compiling in environment: ${params.env}"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo "Testing Hello World"
                }
            }
        }
        stage('Package') {
            steps {
                script {
                    echo "Packaging Hello World"
                }
            }
        }
    }
}
